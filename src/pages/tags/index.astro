---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import '../../styles/global.css';

const allPosts = await getCollection('posts');
const allTags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
---

<Layout title="Cats n Coffee Corner">
	<div class="main-content">
		<h1><span class="text-gradient">Cats-n-Coffee</span> Corner</h1>
		
		<h2 class="basic-heading-two">Available Tags</h2>
		<ul role="list" class="basic-list">
			{
				allTags.map((tag) => <li><a href={`/tags/${tag}`}>{ tag }</a></li>)
			}
		</ul>
	</div>
</Layout>

<style>
@media screen and (min-width: 1050px) {
    .main-content {
        max-width: 1050px;
        margin: 0 auto;
    }
}
</style>