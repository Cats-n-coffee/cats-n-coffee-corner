---
import { Icon } from 'astro-icon/components';
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
---
<Layout title="Cats n Coffee Corner">
    <div class="main-content">
        <h1><span class="text-gradient">Cats-n-Coffee</span> Corner</h1>
    
        <section class="playground-content">
			<p>Projects Page Under Construction</p>
			<div class="playground-content-illustration">
				<Icon name="screwdriver-wrench" />
			</div>
		</section>
    </div>
</Layout>

<style>
main {
    padding: 1em 1em 1.5em 1em;
}

.playground-content {
    display: flex;
    flex-direction: column;
    align-items: center;

    p {
        font-size: 1.5em;
        text-align: center;
    }
}

.playground-content-illustration {
    margin-top: 3em;

    svg {
        width: 150px;
        height: auto;
    }
}

@media screen and (min-width: 1050px) {
    .main-content {
        max-width: 1050px;
        margin: 0 auto;
    }
}
</style>