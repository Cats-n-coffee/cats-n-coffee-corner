---
import Navbar from './Navbar.astro';
import MobileMenuOpen from './MobileMenuOpen.astro';
import ThemeToggle from './ThemeToggle.astro';
---
<header>
    <div class="header-inner">
        <nav>
            <MobileMenuOpen />
            <Navbar />
        </nav>
        <ThemeToggle />
    </div>
</header>

<style>
header {
    width: 100%;
    background: var(--secondary-medium);
    padding: 1em;
}

.header-inner {
    width: 100%;
    max-width: 1920px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0 auto;
}
</style>